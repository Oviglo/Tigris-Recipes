{
    "manifests": {
        "tigris/core-bundle": {
            "manifest": {
                "bundles": {
                    "Tigris\\CoreBundle": ["all"]
                },
                "copy-from-recipe": {
                    "config/": "%CONFIG_DIR%/",
                    "tsconfig.json": "tsconfig.json"
                },
                "add-lines": [
                    {
                        "file": "webpack.config.js",
                        "position": "after_target",
                        "target": ".splitEntryChunks()",
                        "content": "    .enableSassLoader()\n    .enableTypeScriptLoader(function(tsConfig) {\n        tsConfig.transpileOnly = true;\n    })\n    .enableVueLoader()"
                    }
                ]
            },
            "files": {
                "config/packages/tigris_core.yaml": {
                    "contents": "tigris_core:\n"
                },
                "tsconfig.json": {
                    "contents": [
                        "{",
                        "    \"compilerOptions\": {",
                        "        \"target\": \"es6\",",
                        "        \"module\": \"commonjs\",",
                        "        \"outDir\": \"./dist\",",
                        "        \"strict\": true,",
                        "        \"esModuleInterop\": true,",
                        "        \"allowJs\": true,",
                        "        \"checkJs\": false,",
                        "        \"skipLibCheck\": true,",
                        "        \"resolveJsonModule\": true,",
                        "        \"forceConsistentCasingInFileNames\": true,",
                        "        \"typeRoots\": [",
                        "            \"./node_modules/@types\",",
                        "            \"./@types\"",
                        "        ]",
                        "    },",
                        "    \"exclude\": [",
                        "        \"node_modules\",",
                        "        \"vendor\"",
                        "    ]",
                        "}"
                    ]
                }
            },
            "ref": "ff6ebb19e6573e0a2ef51b39307dbcfbda4f8e39"
