{
    "manifests": {
        "tigris/core-bundle": {
            "manifest": {
                "bundles": {
                    "Tigris\\CoreBundle\\TigrisCoreBundle": ["all"]
                },
                "copy-from-recipe": {
                    "config/": "%CONFIG_DIR%/",
                    "tsconfig.json": "tsconfig.json",
                    "assets/": "%ASSETS_DIR%/"
                },
                "add-lines": [
                    {
                        "file": "webpack.config.js",
                        "position": "after_target",
                        "target": ".splitEntryChunks()",
                        "content": "    .enableSassLoader()\n    .enableTypeScriptLoader(function(tsConfig) {\n        tsConfig.transpileOnly = true;\n    })\n    .enableVueLoader()"
                    },
                    {
                        "file": "%CONFIG_DIR%/routes.yaml",
                        "position": "bottom",
                        "content": "tigris_core:\n    resource: \"@TigrisCoreBundle/config/routing.yaml\"\n"
                    }
                ]
            },
            "files": {
                "config/packages/tigris_core.yaml": {
                    "contents": ["tigris_core:\n"],
                    "executable": false
                },
                "tsconfig.json": {
                    "contents": [
                        "{",
                        "    \"compilerOptions\": {",
                        "        \"target\": \"es6\",",
                        "        \"module\": \"commonjs\",",
                        "        \"outDir\": \"./dist\",",
                        "        \"strict\": true,",
                        "        \"esModuleInterop\": true,",
                        "        \"allowJs\": true,",
                        "        \"checkJs\": false,",
                        "        \"skipLibCheck\": true,",
                        "        \"resolveJsonModule\": true,",
                        "        \"forceConsistentCasingInFileNames\": true,",
                        "        \"typeRoots\": [",
                        "            \"./node_modules/@types\",",
                        "            \"./@types\"",
                        "        ]",
                        "    },",
                        "    \"exclude\": [",
                        "        \"node_modules\",",
                        "        \"vendor\"",
                        "    ]",
                        "}"
                    ],
                    "executable": false
                },
                "assets/back.js": {
                    "contents": [
                        "import '../vendor/tigris/core-bundle/assets/scss/back/back.scss';"
                    ],
                    "executable": false
                }
                
            },
            "ref": "2b1df7e2313db1ab49424b241da0802e961efa9a"
        }
    }
}