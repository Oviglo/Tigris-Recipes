{
    "manifests": {
        "tigris/core-bundle": {
            "manifest": {
                "bundles": {
                    "Tigris\\CoreBundle": ["all"]
                },
                "copy-from-recipe": {
                    "config/": "%CONFIG_DIR%/",
                    "tsconfig.json": "tsconfig.json"
                },
                "add-lines": [
                    {
                        "file": "webpack.config.js",
                        "position": "after_target",
                        "target": ".splitEntryChunks()",
                        "content": "    .enableSassLoader()\n    .enableTypeScriptLoader(function(tsConfig) {\n        tsConfig.transpileOnly = true;\n    })\n    .enableVueLoader()"
                    }
                ]
            },
            "files": {
                "config/packages/tigris_core.yaml": {
                    "content": "tigris_core:\n"
                },
                "tsconfig.json": {
                    "content": "{\n                \"compilerOptions\": {\n                    \"target\": \"es6\",\n                    \"module\": \"commonjs\",\n                    \"moduleResolution\": \"node\",\n                    \"sourceMap\": true,\n                    \"outDir\": \"./dist\",\n                    \"baseUrl\": \".\",\n                    \"paths\": {\n                        \"@/*\": [\"src/*\"]\n                    }\n                },\n        \"resolveJsonModule\": true,\n                \"include\": [\"src/**/*\"],\n                \"exclude\": [\"node_modules\",\"vendor\"]\n            }"
                }
            },
            "ref": "ff6ebb19e6573e0a2ef51b39307dbcfbda4f8e39"
        }
    }
}